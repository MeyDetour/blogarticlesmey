{% extends 'base.html.twig' %}

{% block title %}Hello CategoryController!{% endblock %}

{% block body %}
    <table class="table">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">name</th>


        </tr>
        </thead>
        <tbody>
        {% for cat in cats %}
        <tr>
            <th scope="row">{{ loop.index }}</th>
            <td><a href="{{ path('filter_category',{'id':cat.id}) }}">{{ cat.name }}</a></td>


        </tr>
        {% endfor %}

        </tbody>
    </table>
{% endblock %}
