{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}
    <div class="containerMade">
        <div class="articlesContainer ">
            {% if articles is not empty %}
                {% for article in articles %}
                    {% if article.status == 'ACTIVE' %}
                        <div class="art   ">
                            <a href="{{ path('show_article',{"id":article.id}) }}">
                                <h3>{{ article.title }}</h3>
                                {{ article.chapo }}
                            </a>

                        </div>
                        {% if loop.index == 6 %}
                            <img src="{{ asset('image/catNewTechnology.webp') }}" alt="Les nouvelles technologies">
                        {% elseif loop.index == 8 %}
                            <img src="{{ asset('image/catLogo.png') }}" alt="Les nouvelles technologies">

                        {% endif %}


                    {% endif %}
                {% endfor %}
            {% endif %}
        </div>
    </div>

{% endblock %}

